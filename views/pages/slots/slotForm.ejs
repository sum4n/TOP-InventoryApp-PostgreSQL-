<%- include('../../partials/head') %><%- include('../../partials/header') %>

<h1><%= locals.title %> :</h1>

<form method="POST">
  <label for="slot_name">Slot Name:</label>
  <input
    type="text"
    name="slot_name"
    id="slot_name"
    value="<%= locals.slot ? slot.slot_name : '' %>"
    required
  />
  <label for="slot_price">Slot Price</label>
  <input
    type="number"
    name="slot_price"
    id="slot_price"
    value="<%= locals.slot ? slot.slot_price : '' %>"
    required
  />
  <button type="submit">Submit</button>
</form>

<% if (locals.errors) {%>
<ul>
  <% errors.forEach(error => {%>
  <li>
    <p><%= error.msg %></p>
  </li>
  <% }) %>
</ul>
<% } %>
