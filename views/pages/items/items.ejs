<%- include('../../partials/head') %> <%- include('../../partials/header') %>

<h1>Items:</h1>

<% if (locals.items.length == 0) {%>
<p>Not items found.</p>
<% } else { %>
<hr />
<% locals.types.forEach((type) => {%>
<table style="width: 50%">
  <h3><%= type.type_name %></h3>
  <tr>
    <th>Item</th>
    <th>Slot</th>
    <th>Cost</th>
  </tr>
  <% locals.items.forEach((item)=> { %> <% if(item.type_name == type.type_name)
  {%>
  <tr>
    <td>
      <span>
        <img src="<%= item.image_url %>" width="18" height="18" />
      </span>
      <span class="itemLink">
        <a href="/items/<%= item.item_id %>">[<%= item.name %>]</a>
      </span>
    </td>
    <td><%= item.slot_name %></td>
    <td>
      <span><%= item.slot_price %></span>
      <span><img src="/images/frostemblem.webp" width="18" height="18" /></span>
    </td>
  </tr>
  <% } %> <% }) %>
</table>
<% }) } %>
